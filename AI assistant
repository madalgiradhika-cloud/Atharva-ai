<script>
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
const OPENROUTER_API_KEY = "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";
const MODEL = "deepseek/deepseek-r1";
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

const chatContainer = document.getElementById("chat-container");
const userInput     = document.getElementById("user-input");
const sendBtn       = document.getElementById("send-btn");
const btnClear      = document.getElementById("btn-clear");
const btnVoice      = document.getElementById("btn-voice");

let abortController = null;
let recognition = null;

function addMessage(role, content, isLoading = false) {
  const div = document.createElement("div");
  div.className = `message ${role}`;
  if (isLoading) {
    div.classList.add("loading");
    div.textContent = "Thinking...";
  } else {
    div.innerHTML = formatContent(content);
  }
  chatContainer.appendChild(div);
  chatContainer.scrollTop = chatContainer.scrollHeight;
  return div;
}

function formatContent(text) {
  return text
    .replace(/```([\s\S]*?)```/g, (_, code) => `<pre><code>${escapeHtml(code.trim())}</code></pre>`)
    .replace(/`([^`]+)`/g, (_, code) => `<code>${escapeHtml(code)}</code>`)
    .replace(/\n/g, "<br>");
}

function escapeHtml(unsafe) {
  return unsafe
    .replace(/&/g, "&amp;")
    .replace(/</g, "&lt;")
    .replace(/>/g, "&gt;")
    .replace(/"/g, "&quot;")
    .replace(/'/g, "&#039;");
}

function autoGrow(element) {
  element.style.height = "auto";
  element.style.height = (element.scrollHeight) + "px";
}

userInput.addEventListener("input", () => {
  autoGrow(userInput);
});

userInput.addEventListener("keydown", e => {
  if (e.key === "Enter" && !e.shiftKey) {
    e.preventDefault();
    sendMessage();
  }
});

sendBtn.addEventListener("click", sendMessage);

async function sendMessage() {
  const text = userInput.value.trim();
  if (!text) return;

  addMessage("user", text);
  userInput.value = "";
  autoGrow(userInput);

  sendBtn.disabled = true;

  const loadingMsg = addMessage("assistant", "", true);

  abortController = new AbortController();

  try {
    const response = await fetch("https://openrouter.ai/api/v1/chat/completions", {
      method: "POST",
      signal: abortController.signal,
      headers: {
        "Authorization": `Bearer ${OPENROUTER_API_KEY}`,
        "HTTP-Referer": window.location.origin,       
        "X-Title": "Jarvis AI",                       
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        model: MODEL,
        messages: [
          { role: "system", content: "You are Jarvis, a helpful, clever and slightly sarcastic AI assistant. Be concise, witty when appropriate, and extremely capable." },
          { role: "user",   content: text }
        ],
        temperature: 0.7,
        max_tokens: 2048,
        stream: false   
      })
    });

    if (!response.ok) {
      throw new Error(`API error ${response.status}`);
    }

    const data = await response.json();
    const reply = data.choices?.[0]?.message?.content || "No response";

    loadingMsg.classList.remove("loading");
    loadingMsg.innerHTML = formatContent(reply);

  } catch (err) {
    if (err.name === "AbortError") {
      loadingMsg.innerHTML = "Request cancelled.";
    } else {
      loadingMsg.innerHTML = `Error: ${err.message}`;
    }
    loadingMsg.style.color = "#dc2626";
  } finally {
    sendBtn.disabled = false;
    abortController = null;
    chatContainer.scrollTop = chatContainer.scrollHeight;
  }
}

btnClear.addEventListener("click", () => {
  if (confirm("Clear conversation?")) {
    chatContainer.innerHTML = "";
  }
});

if ('SpeechRecognition' in window || 'webkitSpeechRecognition' in window) {
  const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
  recognition = new SpeechRecognition();
  recognition.continuous = false;
  recognition.interimResults = false;
  recognition.lang = "en-US";

  recognition.onresult = e => {
    const transcript = e.results[0][0].transcript.trim();
    if (transcript) {
      userInput.value = transcript;
      autoGrow(userInput);
      sendMessage();
    }
  };

  recognition.onerror = e => {
    console.error("Voice error:", e.error);
    alert("Voice input error: " + e.error);
  };

  btnVoice.addEventListener("click", () => {
    try {
      recognition.start();
      btnVoice.style.background = "#ffeef0";
      btnVoice.style.color = "#cf222e";
      setTimeout(() => {
        btnVoice.style.background = "";
        btnVoice.style.color = "";
      }, 8000);
    } catch (err) {
      alert("Voice recognition not supported or blocked.");
    }
  });
} else {
  btnVoice.disabled = true;
  btnVoice.title = "Voice not supported in this browser";
}

</script>
</body>
